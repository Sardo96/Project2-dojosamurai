<h1>Sign In</h1>

<form action='/login' method='POST'>
  <label> Email</label>
  <input type='email' name='email' required />

  <label> Password</label>
  <input type='password' name='password' required />

  <button type='submit'> Login </button>
</form>

{{#if errorMessage}}
  <div style='color: red'>{{errorMessage}}</div>
{{/if}}